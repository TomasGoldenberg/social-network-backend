const db = {
	"user":[
		{id:1 , name:"tomas"},
		{id:2 , name: "melina"}
	],
};

function list(table) {
return db[table]
}

function get(table, id) {
let coleccion = list(table)

return collecion.filter(item => item.id === id)[0] || null;
}


