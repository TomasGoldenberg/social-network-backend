69 EN AUTH DE LA RAIZ DEL PROYECTO EN EL INDEX.JS
en la funcion OWN 


const check= {
    own:function(req, owner){
        const decoded = decodeHeader(req);
        console.log(decoded)

	if(decoded.id !== owner){
	throw new Error("No puedes editar esto")
	}
    },
}


